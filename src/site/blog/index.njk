<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Latest Blog Posts &mdash; Lightspeed</title>
    <link rel="preconnect" href="https://www.google-analytics.com">
    <link rel="preload" href="/img/starfield.svg" as="image">
    <script>if (document.location.hostname === "reachlightspeed.com") {window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date; ga('create', 'UA-159388575-1', 'auto'); ga('send', 'pageview');}</script>
    {% set css %}
      {% include "css/styles.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
    <script async src="https://www.google-analytics.com/analytics.js"></script>
    <script defer src="/js/instantpage.js"></script>
    <link rel="shortcut icon" href="/favicon.png">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Latest Blog Posts &mdash; Lightspeed<">
    <meta property="og:image" content="https://reachlightspeed.com/img/lightspeed_opengraph.png">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Latest Blog Posts &mdash; Lightspeed<">
    <meta name="twitter:image" content="https://reachlightspeed.com/img/lightspeed_opengraph.png">
    <meta name="author" content="Lightspeed Consulting LLC">
    {% set darkmode %}
      {% include "js/darkmode.js" %}
    {% endset %}
    <script>
      {{ darkmode | jsmin | safe }}
    </script>
  </head>

	<body class="bg-fixed bg-starfield mx-4 overflow-x-hidden font-body dark:text-white">
    {% include 'partials/nav.njk' %}


      <main class="block max-w-3xl -mt-32 mx-auto">

        <section class="spacepurple-section mt-16" id="blog">
          <div class="max-w-3xl mx-auto">
            <span class="block text-white text-center pt-20 opacity-75 tracking-widest uppercase">Our Perspectives</span>
            <h1 class="text-white text-center pt-1 font-thin sm:text-5xl tracking-wide text-4xl">Latest Blog Posts</h1>

            <ul class="text-left mt-12 mb-12 sm:mb-16 border-t border-white border-opacity-25 dark:border-spacepurple-dark">
              {%- for post in collections.post | reverse -%}
                <li><a class="flex flex-row justify-center items-center text-white p-4 border-b border-white border-opacity-25 bg-black bg-opacity-0 hover:bg-opacity-10 transition dark:border-spacepurple-dark group min-h-32" href="{{ post.url }}">
                  {# <img class="w-24 h-16 sm:w-32 sm:h-24 object-cover ml-2 mr-4 rounded-md shadow" src="{{ post.data.hero_img }}.jpg" loading="lazy" alt="Post image for {{ post.data.title }}" > #}
                  <div class="flex-1 flex flex-col m-auto">
                    <div class="font-light text-xl mb-2 sm:text-2xl leading-tight">{{ post.data.title }}</div>
                    <div class="mb-1 text-base font-normal">{{ post.date | readableDate }} &bullet; {{ post.data.author }}</div>
                  </div>
                  <svg class="transition transform group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                    <path d="M12 30 L24 16 12 2" />
                  </svg>
                </a></li>
              {%- endfor -%}
            </ul>
          </div>
        </section>

      </main>
      
    {% include 'partials/footer.njk' %}

  </body>

</html>