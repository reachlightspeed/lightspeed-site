<header class="mb-32 z-20 w-full fixed top-0 left-0 right-0 border-b-3 bg-white dark:bg-spacepurple-darkest dark:border-spacepurple-darker">
  <div class="flex max-w-8xl m-auto h-16">

    <div class="hidden xs:flex sm:flex-1">

      {% if page.url == "/" %}
        <a href="#" class="border-none no-tap-highlight flex items-center pl-3 md:px-3" aria-label="Home">
      {% else %} 
        <a href="/" class="border-none flex items-center pl-3 md:px-3" aria-label="Home">
      {% endif %}
        <svg viewBox="0 0 42 42" xmlns="http://www.w3.org/2000/svg" class="sm:m-2 w-8 text-spacepurple"><path fill="currentColor" fill-rule="evenodd" d="M21 42a21 21 0 100-42 21 21 0 000 42zM31.8 7.59a1 1 0 00-1.32-1.44l-18 11a1 1 0 00-.19 1.56l5.4 5.4-7.5 10.3a1 1 0 001.33 1.44l18-11a1 1 0 00.19-1.56l-5.4-5.4 7.5-10.3z" clip-rule="evenodd"></path>
        </svg>
        <h1 class="hidden whitespace-no-wrap sm:inline-flex text-3xl text-spacepurple-dark italic font-semibold tracking-tight leading-none dark:text-white">Lightspeed</h1>
      </a>
    </div>

    <div class="flex flex-1 sm:flex-initial sm:w-2/3 md:w-1/2 justify-center">
      <nav class="flex w-full max-w-xl justify-around -m-3px md:text-lg text-spacepurple-dark mx-2 md:mr-2 lg:mx-0 dark:text-white">
        <a class="no-tap-highlight md:px-5 px-2 flex items-center border-b-3 border-transparent lg:hover:text-spacepurple dark:text-white dark-hover:text-spacepurple-light transition" href="/#services" data-nav="services">Services</a>
        <a class="no-tap-highlight md:px-5 px-2 flex items-center border-b-3 border-transparent lg:hover:text-spacepurple dark:text-white dark-hover:text-spacepurple-light transition" href="/#about" data-nav="about">About</a>
        <a class="no-tap-highlight md:px-5 px-2 flex items-center border-b-3 border-transparent lg:hover:text-spacepurple dark:text-white dark-hover:text-spacepurple-light transition" href="/#contact" data-nav="contact">Contact</a>
        <a class="no-tap-highlight md:px-5 px-2 flex items-center border-b-3 border-transparent lg:hover:text-spacepurple dark:text-white dark-hover:text-spacepurple-light transition {% if '/blog' in page.url %}border-spacepurple text-spacepurple dark:text-spacepurple-light{% endif %}" href="/#blog" data-nav="blog">Blog</a></li>
      </nav>
    </div>

    <div class="hidden lg:flex-1 lg:flex flex-row-reverse items-center">
      <div class="flex cursor-pointer p-3 opacity-75 hover:opacity-100 no-tap-highlight" onClick="toggleDarkMode(event)" aria-label="Dark Mode">
        <svg class="w-6 mx-3 text-spacepurple-dark dark:text-spacepurple" id="dark-mode-moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="currentcolor" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
          <path d="M14 2C 9 2 3 7 3 15 3 23 9 29 17 29 25 29 30 23 30 18 19 25 7 13 14 2Z" />
        </svg>
      </div>
    </div>

  </div>
</header>