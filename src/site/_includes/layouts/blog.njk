<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="article-author" content="{{ author | safe }}"/>
    <title>{{ title | safe }} &mdash; Lightspeed</title>
    {% if meta_description %}<meta name="description" content="{{ meta_description | safe }}">{% endif %}
    <link rel="preconnect" href="https://www.google-analytics.com">
    <link rel="preload" href="{{ hero_img | safe }}.jpg" as="image">
    <script>if (document.location.hostname === "reachlightspeed.com") {window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date; ga('create', 'UA-159388575-1', 'auto'); ga('send', 'pageview');}</script>
    {% set css %}
      {% include "css/styles.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
    <script async src='https://www.google-analytics.com/analytics.js'></script>
    <script defer src="/js/instantpage.js"></script>
    <link rel="shortcut icon" href="/favicon.png">
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ title | safe }} &mdash; Lightspeed">
    {% if meta_description %}
      <meta property="og:description" content="{{ meta_description | safe }}" />
    {% else %} 
      <meta property="og:description" content="{{content | striptags | truncate(196) }}" />
    {% endif %}
    <meta property="og:image" content="https://reachlightspeed.com{{ og_img | safe }}.jpg">
    <meta property="og:url" content="https://reachlightspeed.com{{ page.url }}">
    <meta property="article:publisher" content="https://reachlightspeed.com" />
    <meta property="article:published_time" content="{{ page.date | htmlDate }}" />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title | safe }}">
    <meta name="twitter:description" content="{{content | striptags | truncate(196) }}">
    <meta name="twitter:image" content="https://reachlightspeed.com{{ og_img | safe }}.jpg">
    <meta name="twitter:url" content="https://reachlightspeed.com{{ page.url }}">
    <meta name="author" content="{{ author | safe }}">
    <link rel="canonical" href="https://reachlightspeed.com{{ page.url }}">
    {% set darkmode %}
      {% include "js/darkmode.js" %}
    {% endset %}
    <script>
      {{ darkmode | jsmin | safe }}
    </script>
  </head>
  
	<body class="mx-4 blog overflow-x-hidden font-body bg-tint">
    {% include 'partials/nav.njk' %}
    <main class="block max-w-3xl mx-auto">
      <div class="blog-masthead -mt-12 sm:mt-0 w-full absolute bg-cover top-0 left-0" style="background-image: linear-gradient(rgba(59,94,226,.4),rgba(59,94,226,.4)), url({{ hero_img | safe }}.jpg), url({{ hero_img_preload | safe }});"></div>
      <div class="mt-24 sm:mt-32 relative h-auto">
        <div class="post-image flex flex-col justify-center rounded-lg text-center bg-cover px-6 py-12 lg:px-12 shadow-xl" style="background-image: linear-gradient(rgba(0,0,0,.4),rgba(0,0,0,.4)), url({{ hero_img | safe }}.jpg),  url({{ hero_img_preload | safe }});">
          <h1 class="text-2xl md:text-3xl text-white leading-snug">{{ title | safe }}</h1>
          <span class="block font-light text-white text-lg md:text-xl pt-2">{{ page.date | readableDate }}</span>
        </div>
        <div class="author-info -mt-8">
          <picture>
            <source srcset="{{ author_img | safe }}.avif 1x, {{ author_img | safe }}@2x.avif 2x" type="image/avif">
            <source srcset="{{ author_img | safe }}.webp 1x, {{ author_img | safe }}@2x.webp 2x" type="image/webp">
            <source srcset="{{ author_img | safe }}.jpg 1x, {{ author_img | safe }}@2x.jpg 2x" type="image/jpeg">
            <img src="{{ author_img | safe }}.jpg" width="64" height="64" loading="eager" alt="A photo of {{ author | safe }}" class="mx-auto rounded-full" />
          </picture>
          <div class="text-center mt-2 dark:text-white">
            <span class="block md:text-xl">{{ author | safe }}</span>
            <span class="block md:text-lg font-light text-sm mt-0 ">{{ author_title | safe }}</span>
            {% if author_twitter %}
              <a href="https://twitter.com/{{ author_twitter | safe }}" class="inline-block rounded-full p-2 hover:bg-blue-400 hover:bg-opacity-25" style="color: #1da1f2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="28" height="28">
                  <title>{{ author | safe }} (@{{ author_twitter | safe }}) on Twitter</title>
                  <path stroke-width="0" fill="currentColor" d="M60 16 L54 17 L58 12 L51 14 C42 4 28 15 32 24 C16 24 8 12 8 12 C8 12 2 21 12 28 L6 26 C6 32 10 36 17 38 L10 38 C14 46 21 46 21 46 C21 46 15 51 4 51 C37 67 57 37 54 21 Z" />
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
      <section class="z-12 relative mt-8 sm:mt-10">  
        {{ content | safe }}
      </section>

    </main>

    {% include 'partials/footer-subscribe.njk' %}
  </body>

</html>