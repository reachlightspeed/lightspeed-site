{
  "name": "lightspeed",
  "version": "1.0.0",
  "description": "A project scaffold for quick-starting a site with Eleventy and TailwindCSS",
  "author": "Lightspeed Consulting LLC",
  "scripts": {
    "build": "npm-run-all build:css build:html",
    "build:css": "postcss src/site/_includes/css/tailwind.css -o src/site/_includes/css/styles.css",
    "build:html": "eleventy",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "postcss src/site/_includes/css/tailwind.css -o src/site/_includes/css/styles.css --watch",
    "watch:html": "eleventy --serve --port=8181",
    "start": "npm run watch"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.2",
    "clean-css": "^4.2.3",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "luxon": "^1.21.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.4.5",
    "tailwindcss-dark-mode": "^1.1.4",
    "terser": "^4.6.10"
  }
}
