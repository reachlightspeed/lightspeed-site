{
  "name": "lightspeed",
  "version": "1.0.0",
  "description": "A project scaffold for quick-starting a site with Eleventy and TailwindCSS",
  "author": "Lightspeed Consulting LLC",
  "scripts": {
    "build": "npm-run-all --sequential clean build:css build:html",
    "build:css": "windicss './src/**/*.njk' -mto './src/styles.css' -f tailwind.config.js",
    "build:html": "ELEVENTY_ENV=production eleventy",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "onchange -i './src/**/*.njk' -- windicss './src/**/*.njk' -to './src/styles.css' -f tailwind.config.js",
    "watch:html": "eleventy --serve",
    "clean": "rm -rf _site"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "purgecss": "^4.0.3",
    "terser": "^5.6.1",
    "windicss": "^2.5.11"
  }
}
